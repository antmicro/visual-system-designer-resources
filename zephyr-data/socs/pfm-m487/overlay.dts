/ {
	compatible = "nuvoton,pfm-m487", "nuvoton,m487";
	chosen {
		zephyr,console = &uart0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};
};
&gpiog{
	status = "okay";
};
&gpiof{
	status = "okay";
};
&uart0{
	status = "okay";
	current-speed = < 0x1c200 >;
	pinctrl-0 = < &uart0_default >;
	pinctrl-names = "default";
};
&gpioh{
	status = "okay";
};
&gpiob{
	status = "okay";
};
&flash0{
	reg = < 0x0 0x80000 >;
};
&sram0{
	reg = < 0x20000000 0x28000 >;
};
