/ {
	compatible = "silabs,efr32mg21_brd4180a", "silabs,efr32mg21";
	chosen {
		zephyr,console = &usart0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};
};
&gpioa{
	status = "okay";
};
&i2c1{
	status = "disabled";
};
&gpiob{
	status = "okay";
};
&usart1{
	status = "disabled";
};
&usart0{
	status = "okay";
	current-speed = < 0x1c200 >;
	location-rx = < 0x0 0x0 0x6 >;
	location-tx = < 0x0 0x0 0x5 >;
};
&gpioc{
	status = "okay";
};
&i2c0{
	status = "disabled";
};
&gpiod{
	status = "okay";
};
&usart2{
	status = "disabled";
};
&pinctrl{
	compatible = "silabs,gecko-pinctrl";
};